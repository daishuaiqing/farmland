/* pages/user/user.wxss */
page {
  background: #F2F2F2;
  display: flex;
  flex-direction: column;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #FFFFFF;
}
.userinfo image {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.info_body {
  display: flex;
  flex-direction: column;
}
.username {
  font-size: 32rpx;
  color: #333333;
}
.telephone {
  font-size: 28rpx;
  color: #999999;
  margin-top: 15rpx;
}
.dynamic {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 0rpx;
  background: #FFFFFF;
}
.d_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.type_numb {
  font-size: 36rpx;
  color: #333333;
}
.type_name {
  color: #9C9C9C;
  font-size: 28rpx;
  margin-top: 8rpx;
}
.frame {
  margin-top: 20rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.f_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx 20rpx;
  align-items: center;
}
.f_item_title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.f_item_title image {
  width: 48rpx;
  height: 45rpx;
}
.f_item_title text {
 font-size: 34rpx;
 margin-left: 20rpx;
}
.f_goto {
  width: 48rpx;
  height: 45rpx;
}
.f_line {
  height: 2rpx;
  background: #E6E6E6;
}